
open(CHANGELOG,"<!Sunfish/ChangeLog");

$line = <CHANGELOG>;

$line =~ /^v(.\...).*/;

$version = $1;

open(OUT,">pkg/RiscPkg/Control");

print OUT <<EOF
Package: Sunfish
Priority: Standard
Section: Misc
Maintainer: Alex Waugh <alex\@alexwaugh.com>
Standards-Version: 0.1.0
Source: Sunfish
Version: $version
Licence: Free
Description: An NFS client.
EOF

