case NFS_OK:
     READDIRPLUS3resok   readdirok;
default:
     READDIRPLUS3resfail resfail;
};

readdirplusres3 NFSPROC3_READDIRPLUS(readdirplusargs3) = 17;



struct FSSTAT3args {
     nfs_fh3   fsroot;
};

