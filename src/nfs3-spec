case NFS_OK:
     REMOVE3resok   resok;
default:
     REMOVE3resfail resfail;
};


removeres3 NFSPROC3_REMOVE(diropargs3) = 12;


removeres3 NFSPROC3_RMDIR(diropargs3) = 13;


struct renameargs3 {
     diropargs3   from;
     diropargs3   to;
};

